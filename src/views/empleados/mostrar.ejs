<div class="row mb-4">
    <div class="col-md-12 d-flex h-100">

        <div class="row justify-content-center align-self-center">
            <img style="float:left; border-radius:25%; margin-right: 50px;"
                src="https://api.adorable.io/avatars/150/<%= empleado.numeroCedula.substring(empleado.numeroCedula.length - 3, empleado.numeroCedula.length) %>"
                alt="Avatar">
        </div>
        <div class="row justify-content-center align-self-center">
            <h2><%=  empleado.nombreCompleto %></h2>
        </div>
    </div>
</div>

<% if(login) { %>

<div class="container mb-4">
    <a href="/empleados/editar/<%= empleado.IdEmpleado %>" class="btn btn-outline-warning">Editar</a>

    <form action="/empleados/<%= empleado.IdEmpleado %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-outline-danger">Eliminar</button>
    </form>
</div>

<% } %>


<table class="table table-hover">
    <tr>
        <td>Numero de cedula</td>
        <td><%= empleado.numeroCedula %></td>
    </tr>
    <tr>
        <td>Correo electronico</td>
        <td><%= empleado.correoElectronico %></td>
    </tr>
    <tr>
        <td>Sueldo base</td>
        <td>COP <%= empleado.sueldoBase %></td>
    </tr>
    <tr>
        <td>Prestaciones</td>
        <td>
            <ul>
                <li>Salud: COB <%= salud %></li>
                <li>Pension: COB <%= pension %></li>
                <li>Transporte: COB <%= transporte %></li>
                <hr>
                <li>Total devengado COB <%= totalDevengado %></li>
            </ul>
        </td>
    </tr>
    <tr>
        <td>Salario neto</td>
        <td>COB <%= salarioNeto %></td>
    </tr>
</table>